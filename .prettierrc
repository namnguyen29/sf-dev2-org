{
  "plugins": ["prettier-plugin-apex", "@prettier/plugin-xml"],
  "printWidth": 120,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "apexInsertFinalNewline": false,
  "overrides": [
    { "files": "**/lwc/**/*.html", "options": { "parser": "lwc" } },
    { "files": "*.{cmp,page,component}", "options": { "parser": "html" } }
  ]
}
